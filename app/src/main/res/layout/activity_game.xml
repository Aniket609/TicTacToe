<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/turn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="410dp"
        android:layout_height="670dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn">

        <!-- Row 1 -->
        <TextView
            android:id="@+id/cell_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/cell_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/cell_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <!-- Row 2 -->
        <TextView
            android:id="@+id/cell_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/cell_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/cell_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <!-- Row 3 -->
        <TextView
            android:id="@+id/cell_7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/cell_8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/cell_9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/cell_border"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="100sp" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


